<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Sensors">

    <androidx.cardview.widget.CardView
        android:id="@+id/temperatureSensor"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_margin="8dp"
        android:background="@drawable/gradient"

        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/temperatureSensorValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center|center_horizontal|center_vertical"
            android:textSize="26sp"
            android:text="Temperature"
             />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/co2Sensor"
        android:layout_width="200dp"
        android:layout_height="230dp"


         android:layout_margin="8dp"
        android:background="@drawable/gradient"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/co2SensorValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:textSize="26sp"


            android:text="CO2"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/humiditySensor"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_margin="8dp"
        android:background="@drawable/gradient"


        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureSensor">
        <TextView
            android:id="@+id/humiditySensorValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:textSize="26sp"
            android:text="Humidity"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/lightSensor"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_margin="8dp"

        android:background="@drawable/gradient"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/co2Sensor">

        <TextView
            android:id="@+id/lightSensorValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:textSize="26sp"
            android:text="Light"/>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>